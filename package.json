{
  "name": "kana",
  "version": "2.7.0",
  "author": "AnimeBytes",
  "engines": {
    "node": ">=12.10.0"
  },
  "scripts": {
    "start-dev": "TS_NODE_FILES=true ts-node src/index.ts",
    "build": "rm -rf dist/ && tsc",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --ext .ts --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/tests/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-dev-dependencies"
  },
  "dependencies": {
    "chalk": "4.0.0",
    "express": "4.17.1",
    "got": "11.3.0",
    "htmlparser2": "4.1.0",
    "http-signature": "1.3.4",
    "irc-framework": "4.8.1",
    "loglevel": "1.6.8",
    "loglevel-plugin-prefix": "0.8.4",
    "source-map-support": "0.5.19",
    "tslib": "2.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/express": "4.17.6",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.10",
    "@types/sinon": "9.0.4",
    "@types/stream-buffers": "3.0.3",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "chai": "4.2.0",
    "check-outdated": "2.2.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "mocha": "7.2.0",
    "mock-fs": "4.12.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "proxyquire": "2.1.3",
    "sinon": "9.0.2",
    "stream-buffers": "3.0.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  }
}
