{
  "name": "kana",
  "version": "2.0.0",
  "author": "AnimeBytes",
  "engines": {
    "node": ">=12.10.0"
  },
  "scripts": {
    "start-dev": "TS_NODE_FILES=true ts-node src/index.ts",
    "build": "rm -rf dist/ && tsc",
    "lint": "eslint --ext .ts --format unix src/ && prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/tests/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-dev-dependencies"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "htmlparser2": "4.0.0",
    "irc-framework": "4.6.0",
    "loglevel": "1.6.7",
    "node-fetch": "2.6.0",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.9",
    "@types/express": "4.17.2",
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.4",
    "@types/node-fetch": "2.5.4",
    "@types/sinon": "7.5.1",
    "@types/stream-buffers": "3.0.3",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "chai": "4.2.0",
    "check-outdated": "1.4.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "mocha": "7.0.1",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "proxyquire": "2.1.3",
    "sinon": "9.0.0",
    "stream-buffers": "3.0.2",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  }
}
