{
  "name": "kana",
  "version": "5.0.0",
  "author": "AnimeBytes",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start-dev": "TS_NODE_FILES=true ts-node src/index.ts",
    "build": "rm -rf dist/ && tsc",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/tests/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "express": "4.17.1",
    "got": "11.8.2",
    "htmlparser2": "7.1.2",
    "http-signature": "1.3.5",
    "irc-framework": "4.11.0",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "source-map-support": "0.5.20",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/chai": "4.2.22",
    "@types/express": "4.17.13",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.6",
    "@types/sinon": "10.0.5",
    "@types/stream-buffers": "3.0.4",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "chai": "4.3.4",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "mocha": "9.1.3",
    "mock-fs": "5.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.4.1",
    "proxyquire": "2.1.3",
    "sinon": "11.1.2",
    "stream-buffers": "3.0.2",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  }
}
