{
  "name": "kana",
  "version": "8.1.0",
  "author": "AnimeBytes",
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "start-dev": "TS_NODE_FILES=true node --no-warnings --loader ts-node/esm src/index.ts --project tsconfig.json",
    "build": "rm -rf dist/ && tsc",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:eslint": "eslint --format unix src/",
    "lint:prettier": "prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent c8 --reporter=text mocha --color 'src/**/*.spec.ts' --exit",
    "clean": "rm -rf .nyc_output/ dist/"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "express": "4.18.2",
    "got": "13.0.0",
    "htmlparser2": "9.0.0",
    "http-signature": "1.3.6",
    "irc-framework": "4.13.1",
    "loglevel": "1.8.1",
    "loglevel-plugin-prefix": "0.8.4",
    "source-map-support": "0.5.21",
    "tslib": "2.6.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/express": "4.17.17",
    "@types/mocha": "10.0.1",
    "@types/node": "18.17.4",
    "@types/sinon": "10.0.16",
    "@types/stream-buffers": "3.0.4",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "c8": "8.0.1",
    "chai": "4.3.7",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "mocha": "10.2.0",
    "mock-fs": "5.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.1",
    "sinon": "15.2.0",
    "stream-buffers": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "resolutions": {
    "@types/responselike": "1.0.0"
  },
  "type": "module",
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ],
    "all": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  }
}
