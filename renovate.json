{
  "extends": [
    "config:base",
    "docker:disableMajor",
    ":automergeTypes",
    ":automergeLinters"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "kind/security"
    ]
  },
  "stabilityDays": 1,
  "semanticCommits": "disabled",
  "ignorePaths": [],
  "ignoreDeps": [],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 3am on tuesday"
    ]
  },
  "node": {
    "supportPolicy": [
      "lts_latest"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    }
  ]
}
