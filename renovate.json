{
  "extends": [
    "config:best-practices",
    "docker:disableMajor",
    "npm:unpublishSafe",
    "security:openssf-scorecard",
    ":automergeTypes",
    ":automergeLinters",
    ":automergeDigest"
  ],
  "ignorePresets": [
    "mergeConfidence:all-badges",
    "mergeConfidence:age-confidence-badges",
    "docker:pinDigests"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "semanticCommits": "disabled",
  "ignorePaths": [],
  "ignoreDeps": [],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 3am on tuesday"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchPackageNames": [
        "express",
        "@types/express"
      ],
      "allowedVersions": "<5.0.0"
    }
  ]
}
